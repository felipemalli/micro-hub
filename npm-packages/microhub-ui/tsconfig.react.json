{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "rootDir": "react",
      "outDir": "react-dist",
      "target": "ES2019",
      "module": "ES2020",
      "moduleResolution": "Node",
      "jsx": "react",
      "jsxFactory": "React.createElement",
      "jsxFragmentFactory": "React.Fragment",
      "declaration": true,
      "emitDeclarationOnly": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": false,
      "baseUrl": ".",
      "types": ["react"],
      "typeRoots": ["./node_modules/@types"],
      "paths": {
        "@felipemalli-libs/microhub-ui": ["./dist"],
        "@felipemalli-libs/microhub-ui/dist/*": ["./dist/*"],
        "react": ["./node_modules/@types/react/index.d.ts"]
      }
    },
    "include": ["react/**/*"]
  }